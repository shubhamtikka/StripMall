@model AddSellerViewModel

@if(TempData["Success"] !=null)
{
    <p class="alert alert-success">@TempData["Success"]</p>
}


        <div class="row">
            <div class="col-md-6 bg-light">
                <h2>Add seller</h2>
                <hr/>
                <form enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="shopType" class="control-lable"></label>
                        <select asp-for="shopType" asp-items="@ViewBag.shopTypes" class="custom-select">
                            <option value="">Choose ShopType</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShopName"></label>
                        <input asp-for="ShopName" class="form-control" />
                        <span asp-validation-for="ShopName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="location" class="control-lable"></label>
                        <select asp-for="location" asp-items="@ViewBag.locations" class="custom-select">
                            <option value="">Choose location</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="AddressLine1"></label>
                        <input asp-for="AddressLine1" class="form-control" />
                        <span asp-validation-for="AddressLine1" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AddressLine2"></label>
                        <input asp-for="AddressLine2" class="form-control" />
                        <span asp-validation-for="AddressLine2" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PinCode"></label>
                        <input asp-for="PinCode" class="form-control" />
                        <span asp-validation-for="PinCode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ShopPhoto" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <div class="custom-file">
                                <input multiple asp-for="ShopPhoto" class="form-control custom-file-input">
                                <label class="custom-file-label">Choose File...</label>
                            </div>
                        </div>
                    </div>


                    <button type="submit" class="btn-primary">Register</button>

                    @section Scripts {
                        <script>
                            $(document).ready(function () {
                                $('.custom-file-input').on("change", function () {
                                    var fileName = $(this).val().split("\\").pop();
                                    $(this).next('.custom-file-label').html(fileName);
                                });
                            });
                        </script>
                    }
                </form>
            </div>
        </div>
