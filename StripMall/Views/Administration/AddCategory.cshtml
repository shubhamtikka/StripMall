@model StripMall.Models.Category

@{
    ViewData["Title"] = "AddCategory";
}

<h1>AddCategory</h1>

<h4 style="text-decoration-color: #909090">Category</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success">@TempData["Success"]</p>
        }
        <form method="post" asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Category" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        @if (TempData["DelSuccess"] != null)
        {
            <p class="alert alert-success">@TempData["DelSuccess"]</p>
        }
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in ViewBag.categories)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.CategoryName</td>
                    <td>@Html.ActionLink("Delete", "delCategory", new { Id = item.CategoryId }, new { @class = "btn btn-danger btn-sm" })</td>
                </tr>
            }
        </table>
    </div>
    </div>


