@model StripMall.Models.ShopType

@{
    ViewData["Title"] = "AddShopType";
}

<h2>Add ShopType</h2>

<h4>ShopType</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success">@TempData["Success"] </p>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" placeholder="Enter Type" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        @if (TempData["DelSuccess"] != null)
        {
            <p class="alert alert-success">@TempData["DelSuccess"]</p>
        }
            <table class="table">
                <thead class="thead-dark">

                    <tr>
                        <th>Id</th>
                        <th>ShopType</th>
                        <th>Action</th>
                    </tr>
                </thead>
                    @foreach (var item in ViewBag.shopTypes)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Type</td>
                            <td>@Html.ActionLink("Delete", "delShopType", new { type = item.Id }, new { @class = "btn btn-danger btn-sm" })</td>
                        </tr>
                    }
            </table>
    </div>

</div>



