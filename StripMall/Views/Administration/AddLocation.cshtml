@model Location
@{
    ViewData["Title"] = "Add Location";
}

<h1>Add New Location</h1>

<div class="row">
    <div class="col-md-6">
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success">@TempData["Success"]</p>
        }
        <form method="post" asp-action="AddLocationAsync">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LocationName"></label>
                <input asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TLChatId"></label>
                <input asp-for="TLChatId" class="form-control" />
                <span asp-validation-for="TLChatId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TLToken"></label>
                <input asp-for="TLToken" class="form-control" />
                <span asp-validation-for="TLToken" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:auto">Add</button>
        </form>
    </div>

    <div class="col-md-6">
        @if (TempData["DelSuccess"] != null)
        {
            <p class="alert alert-success">@TempData["DelSuccess"]</p>  
        }
        <table class="table">
                <thead class="thead-dark">
                    <tr><th>Location</th> <th>Action</th></tr>
                </thead>
            @foreach (var item in ViewBag.LocNames)
            {
                <tr>
                    <td>@item.LocationName</td>
                    
                    <td>@Html.ActionLink("Delete", "delLocation", new { Id = item.LocationId }, new { @class = "btn btn-danger btn-sm" })</td>
                </tr>
            }
        </table>
    </div>
</div>
