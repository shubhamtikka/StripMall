@model IdentityRole
@{
    ViewData["Title"] = "Create Role";
}


<div class="row">
    <div class="col-md-6">
        <h1>Create Role</h1>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-primary" style="width:auto">Register</button>
        </form>
    </div>

    <div class="col-md-6">

        @if (TempData["DelSuccess"] != null)
        {
            <p class="alert alert-success">@TempData["DelSuccess"]</p>
        }
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Role Name</th>
                <th>Action</th>

            </tr>
            @foreach (var item in ViewBag.Roles)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.ActionLink("Delete", "delRole", new { Id = item.Id }, new { @class = "btn btn-danger btn-sm" })</td>
                </tr>
            }
        </table>
    </div>
</div>
