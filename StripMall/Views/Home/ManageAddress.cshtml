@model AddressViewModel
@{
    ViewData["Title"] = "ManageAddress";
}


@if(TempData["msg"] !=null)
{
    <p class="alert alert-dark">@TempData["msg"]</p>
}
    <div class="row">
        <div class="col-md-5 bg-light">
            <div class="bg-dark m-2"><h1 class="text-light m-2">Manage Address</h1>
            <hr class="m-0"/></div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="location" class="control-lable">Location:</label>
                    <select asp-for="location" asp-items="ViewBag.locations" class="custom-select">
                        <option value="">Choose location</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="AddressLine1">Address Line1:</label>
                    <input asp-for="AddressLine1" class="form-control" />
                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AddressLine2">Address Line2: </label>
                    <input asp-for="AddressLine2" class="form-control" />
                    <span asp-validation-for="AddressLine2" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PinCode">PinCode:</label>
                    <input asp-for="PinCode" class="form-control" />
                    <span asp-validation-for="PinCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number: </label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Add Address" />
                <br />
            </form>
        </div>
    </div>