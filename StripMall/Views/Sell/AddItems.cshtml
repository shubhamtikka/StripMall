@model  AddItemsViewModel
@{
    ViewData["Title"] = "AddItems";
}

<h1>Add new Item</h1>
<hr/>
<div class="row">
    <div class="col-md-6 bg-light">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-md-4">
                <label asp-for="Category" class="control-lable"></label>
                <select asp-for="Category" asp-items="ViewBag.Categories" class="custom-select" style="width:auto">
                    <option value="">Choose Item Catagory</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ItemName">Item Name</label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemPrice">Price</label>
                <input asp-for="ItemPrice" class="form-control" />
                <span asp-validation-for="ItemPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemDesc">Description</label>
                <input asp-for="ItemDesc" class="form-control" />
                <span asp-validation-for="ItemDesc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemWeight">Item Weight</label>
                <input asp-for="ItemWeight" class="form-control" />
                <span asp-validation-for="ItemWeight" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <label asp-for="ItemPhoto" class="col-sm-2 col-form-label">Image</label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input multiple asp-for="ItemPhoto" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Item</button>
            <br/>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>
